---
interface Props {
    url: string;
    image: string;
    title: string;
    date: string;
}

const { url, image, title, date, tag } = Astro.props;
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img
                class="card__img"
                width="226"
                height="127"
                src={image}
                alt="PostImage"
            />
            <span class="badge badge--item">{tag}</span>
        </div>
        <h3 class="card__title">
            {title}
        </h3>
    </a>
</li>
